{
  "name": "tim-frontend",
  "version": "1.0.0",
  "description": "Frontend for Ikaalisten Matkatoimisto's Tim project.",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"./{src,pages,cypress}/**/*.{js,ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest — --watch",
    "test:coverage": "jest — --coverage",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "build:e2e": "DEPLOYMENT_ENV=e2e-testing next start",
    "start:e2e": "DEPLOYMENT_ENV=e2e-testing next build",
    "dev:e2e": "DEPLOYMENT_ENV=e2e-testing next"
  },
  "keywords": [],
  "author": "Ari-Pekka Koponen",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "confusing-browser-globals": "^1.0.9",
    "next": "^9.5.2",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.4.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^26.0.12",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.49",
    "@types/testing-library__dom": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "cypress": "^5.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "nock": "^13.0.4",
    "prettier": "2.1.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
